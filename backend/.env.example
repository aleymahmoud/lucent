# ============================================
# LUCENT Backend Environment Variables
# Copy this file to .env and update the values
# ============================================

# Application
APP_NAME=LUCENT
APP_ENV=development
DEBUG=True

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Security
SECRET_KEY=your-secret-key-change-this-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database - Neon PostgreSQL (Pooled Connection)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Database - Neon PostgreSQL (Direct Connection - for migrations)
DATABASE_URL_UNPOOLED=postgresql://user:password@host:5432/database?sslmode=require

# Redis - Upstash
REDIS_URL=rediss://default:password@host:6379

# Redis REST API
KV_REST_API_URL=https://your-redis-host.upstash.io
KV_REST_API_TOKEN=your-token

# Celery Configuration
CELERY_BROKER_URL=rediss://default:password@host:6379
CELERY_RESULT_BACKEND=rediss://default:password@host:6379

# File Upload
MAX_UPLOAD_SIZE_MB=100
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Multi-Tenant Limits
DEFAULT_MAX_USERS=10
DEFAULT_MAX_FILE_SIZE_MB=100
DEFAULT_MAX_ENTITIES_PER_BATCH=50
DEFAULT_MAX_CONCURRENT_FORECASTS=3
DEFAULT_MAX_FORECAST_HORIZON=365
DEFAULT_RATE_LIMIT_FORECASTS_PER_HOUR=20

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/lucent.log
